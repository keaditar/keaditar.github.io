@model Deposit
@{
    ViewData["Title"] = "ТМЛ | Изменение депозита";
    Layout = "/Views/_Layout.cshtml";

    var user = await _BankServices.FindByIdAsync(Model.UserId);
}

<div class="box">
    <div class="block-container name-container c-white">
        <h1 class="c-title text-normal">Изменение депозита пользователя '<bold>@user.Name</bold>'</h1>
    </div>

    <div class="block-container ucp-validation-error ucp-log-container" asp-validation-summary="ModelOnly"></div>

    <div class="block-container ucp-info-block no-padding ucp-reg-inf-block">
        <div>
            <form asp-action="UserEditDeposit" asp-controller="Bank" asp-anti-forgery="true">
                <div>
                    <div class="ucp-reg-input-div">
                        <div class="ucp-row-label">
                            <label asp-for="Money">Мемларов</label>
                            <i class="req">*</i>
                        </div>
                        <div class="ucp-row-input">
                            <input type="number" asp-for="Money" />
                            <span asp-validation-for="Money" />
                        </div>
                    </div>

                    @Html.HiddenFor(m => m.UserId)
                    @Html.HiddenFor(m => m.Id)

                    <div class="ucp-reg-input-div">
                        <div class="ucp-row-label">

                        </div>
                        <div class="ucp-row-input align-center">
                            <button class="button reg-button button-succ" type="submit">Изменить</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
