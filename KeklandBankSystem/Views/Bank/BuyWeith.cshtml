@model BuyWelframe
@{
    ViewData["Title"] = "ТМЛ | Покупка благосостояния";
    Layout = "/Views/_Layout.cshtml";
}

<div class="box">
    <div class="block-container name-container c-white">
        <h1 class="c-title text-normal">Покупка благосостояния</h1>
    </div>
    <div class="block-container ucp-valid-info ucp-log-container">
        <ul>
            <li>Стоимость 1 благосостояния = 90 Мемлар</li>
        </ul>
    </div>

    <div class="block-container ucp-validation-error ucp-log-container" asp-validation-summary="ModelOnly"></div>

    <div class="block-container ucp-info-block no-padding ucp-reg-inf-block">
        <div>
            <form asp-action="BuyWeith" asp-controller="Bank" asp-anti-forgery="true">
                <div>
                    <div class="ucp-reg-input-div">
                        <div class="ucp-row-label">
                            <label asp-for="Welfare">Количество</label>
                            <i class="req">*</i>
                        </div>
                        <div class="ucp-row-input">
                            <input type="number" asp-for="Welfare" class="input-check" />
                            <span asp-validation-for="Welfare" />
                        </div>
                    </div>
                    <div class="ucp-reg-input-div">
                        <div class="ucp-row-label">

                        </div>
                        <div class="ucp-row-input align-center">
                            <div class="transfer-classis">
                                C учётом налога будет взято: <span class="money-changing">0</span> Мемларов
                            </div>
                            <button class="button reg-button button-succ" type="submit">Купить</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/js/transfer-welf.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.14.0/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.6/jquery.validate.unobtrusive.min.js"></script>
}

